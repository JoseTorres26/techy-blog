<div class="row">
  <div class="col-auto">
    <h2>Welcome back!</h2>
  </div>
</div>

{{#if posts.length}}
  <div class="posts">
    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<a href="/add"> Add Post +</a>